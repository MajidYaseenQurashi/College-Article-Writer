const allDevs = [
  {
    name: "Majid Qurashi",
    title: "Designer",
    desc: "I am Full stack web developer",
    mail: "qurashi.netlify.app",
    src: "../assets/profile.jpg",
  },
  {
    name: "Mubashir Farooq",
    title: "work partner",
    desc: "Still learning",
    mail: "mubashirfarooq363@gmail.com",
    src: "../assets/mubashir.jpg",
  },
  {
    name: "Samin Altaf",
    title: "Designer",
    desc: "I am Frontend web developer",
    mail: "saminaltaf@gmail.com",
    src: "../assets/img_avatar.png",
  },
